<%= form_with url: identify_reader_path, method: :post, data: { turbolinks: false }, class: 'mt-3' do |form| %>
  <div class="mb-3">
    <%= form.label :number, "Numer Karty", class: 'form-label' %>
    <%= form.text_field :number, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :code, "Kod Karty", class: 'form-label' %>
    <%= form.password_field :code, class: 'form-control' %>
  </div>

  <%= form.submit "Zidentyfikuj Czytelnika", class: 'btn btn-primary' %>
<% end %>



