<!-- app/views/books/index.html.erb -->

<h1>Lista Książek</h1>
<table>
  <thead>
    <tr>
      <th>Tytuł</th>
      <th>Autor</th>
      <th>Gatunek</th>
      <!-- Dodaj więcej kolumn, jeśli potrzebujesz -->
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <!-- Dodaj więcej pól, jeśli potrzebujesz -->
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.librarian? %>
  <%= link_to 'Dodaj Nową Książkę', new_book_path %>
<% end %>