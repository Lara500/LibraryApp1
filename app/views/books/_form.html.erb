<%= form_with(model: @book, local: true, html: { class: 'needs-validation', novalidate: true }) do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@book.errors.count, "błąd") %> uniemożliwił zapisanie książki:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :image, class: 'form-label' %>
    <%= form.file_field :image, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :title, "Tytuł", class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :author, "Autor", class: 'form-label' %>
    <%= form.text_field :author, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :description, "Opis", class: 'form-label' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :genre, "Gatunek", class: 'form-label' %>
    <%= form.text_field :genre, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :release_date, "Data wydania", class: 'form-label' %>
    <%= form.date_select :release_date, {}, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :publisher, "Wydawnictwo", class: 'form-label' %>
    <%= form.text_field :publisher, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :ISBN, "ISBN", class: 'form-label' %>
    <%= form.text_field :ISBN, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :page_number, "Liczba stron", class: 'form-label' %>
    <%= form.number_field :page_number, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :translation, "Tłumaczenie", class: 'form-label' %>
    <%= form.text_field :translation, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :status, "Status wypożyczenia", class: 'form-label' %>
    <%= form.select :status, ['dostępna', 'wypożyczona', 'niedostępna'], {}, class: 'form-select' %>
  </div>

  <div class="actions">
    <%= form.submit "Zapisz", class: 'btn btn-primary' %>
  </div>
<% end %>
