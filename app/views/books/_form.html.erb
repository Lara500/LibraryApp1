<!-- app/views/books/_form.html.erb -->

<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> uniemożliwiło zapisanie książki:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <!-- Dodaj więcej pól formularza zgodnie z potrzebami -->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
