<%= form_with(model: @book, local: true) do |form| %>

  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "błąd") %> uniemożliwił zapisanie książki:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "Tytuł" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :author, "Autor" %>
    <%= form.text_field :author %>
  </div>

  <div class="field">
    <%= form.label :description, "Opis" %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :genre, "Gatunek" %>
    <%= form.text_field :genre %>
  </div>

  <div class="field">
    <%= form.label :release_date, "Data wydania" %>
    <%= form.date_select :release_date %>
  </div>

  <div class="field">
    <%= form.label :publisher, "Wydawnictwo" %>
    <%= form.text_field :publisher %>
  </div>

  <div class="field">
    <%= form.label :ISBN, "ISBN" %>
    <%= form.text_field :ISBN %>
  </div>

  <div class="field">
    <%= form.label :page_number, "Liczba stron" %>
    <%= form.number_field :page_number %>
  </div>

  <div class="field">
    <%= form.label :translation, "Tłumaczenie" %>
    <%= form.text_field :translation %>
  </div>

  <div class="field">
    <%= form.label :rental_status, "Status wypożyczenia" %>
    <%= form.select :rental_status, ['Dostępna', 'Wypożyczona', 'Niedostępna'] %>
  </div>

  <div class="actions">
    <%= form.submit "Zapisz" %>
  </div>

<% end %>
