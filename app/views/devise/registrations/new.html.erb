<div class="container py-4">
  <div class="p-4 mb-4 bg-light rounded-3">
    <h2 class="mb-3">Rejestracja</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'needs-validation', novalidate: '' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :type, "Typ" , class: 'form-label' %>
        <%= f.select :type, [['Czytelnik', 'Reader'], ['Bibliotekarz', 'Librarian']], {}, { class: 'form-select' } %>
      </div>

      <div class="mb-3">
        <%= f.label :email, "Email" , class: 'form-label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, "Hasło" , class: 'form-label' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> znaków minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Potwierdź hasło", class: 'form-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :first_name, "Imię", class: 'form-label' %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :last_name, "Nazwisko", class: 'form-label' %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :birth_date, "Data urodzenia", class: 'form-label' %>
        <%= f.date_field :birth_date, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :phone_number, "Numer telefonu", class: 'form-label' %>
        <%= f.telephone_field :phone_number, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Zarejestruj się", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>

<footer class="my-5 pt-5 text-muted text-center text-small">
  <p class="mb-1">&copy; Sonia Leszkiewicz 2023</p>
</footer>
