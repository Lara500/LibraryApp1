<div class="container py-4">
  <div class="p-4 mb-4 bg-light rounded-3">
    <h2>Edytuj dane</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="mb-3">
        <%= f.label :email, "Email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-info">Oczekuje na potwierdzenie: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="mb-3">
        <%= f.label :password, "Hasło" %>
        <i>(zostaw puste, jeśli nie chcesz zmieniać)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"> minumum  <%= @minimum_password_length %> znaków</small>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Potwierdź hasło" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, "Aktualne hasło" %>
        <i>(aktualne hasło jest potrzebne, żeby potwierdzić zmiany)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :first_name, "Imię" %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :last_name, "Nazwisko" %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :birth_date, "Data urodzenia" %>
        <%= f.date_field :birth_date, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :phone_number, "Numer telefonu" %>
        <%= f.telephone_field :phone_number, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Zapisz", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <h3>Usuń konto</h3>

    <div class="alert alert-danger">
      Niezadowolony? <%= button_to "Usuń konto", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %>
    </div>

  </div>
</div>
